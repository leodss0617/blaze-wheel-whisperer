{
  "manifest_version": 3,
  "name": "Blaze Auto Bet - Sinais IA",
  "version": "1.2.0",
  "description": "Extensão para automação de apostas no Blaze Double baseada em sinais de IA",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://blaze.bet.br/*",
    "https://blaze.com/*",
    "https://blaze1.space/*",
    "https://*.lovable.app/*",
    "https://*.lovable.dev/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://blaze.bet.br/*",
        "https://blaze.com/*",
        "https://blaze1.space/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://*.lovable.app/*",
        "https://*.lovable.dev/*"
      ],
      "js": ["bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["https://blaze.bet.br/*", "https://blaze.com/*", "https://blaze1.space/*"]
    }
  ]
}
